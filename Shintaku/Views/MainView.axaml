<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:viewModels="clr-namespace:Shintaku.ViewModels"
             xmlns:controls="clr-namespace:Shintaku.Controls"
             xmlns:nodes="clr-namespace:Shintaku.ViewModels.Nodes"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="Shintaku.Views.MainView"
             Foreground="White"
             Background="#171C2C">
    <Design.DataContext>
        <viewModels:MainViewModel />
    </Design.DataContext>

    <Panel>
        <controls:NodeGraphControl x:DataType="nodes:NodeGraphViewModel" x:CompileBindings="True"
                                   ViewPort="{Binding CurrentViewPort, Mode=OneWayToSource}"
                                   VisibleNodes="{Binding VisibleNodes}"
                                   ZoomScalar="{Binding ZoomScalar, Mode=OneWayToSource}">
            <controls:NodeGraphControl.DataContext>
                <nodes:NodeGraphViewModel />
            </controls:NodeGraphControl.DataContext>
        </controls:NodeGraphControl>
    </Panel>
</UserControl>